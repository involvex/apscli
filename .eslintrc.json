{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended"],
    "overrides": [
        {
            "files": ["src/core/tests/*.js"],
            "env": {
                "mocha": true
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": "warn",
        "no-console": "off",
        "header/header": [
            2,
            "block",
            {
                "pattern": "/***********************************************\r\n * @License\r\n * Copyright Involvex\r\n * Copyright 2025\r\n ***********************************************/"
            }
        ]
    }
}
